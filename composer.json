{
    "name": "novatorius/blueprint",
    "description": "Dynamically replaces placeholders within a template string ",
    "type": "library",
    "homepage": "https://github.com/novatorius/blueprint",
    "readme": "README.md",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Novatorius\\Blueprint\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Novatorius\\Blueprint\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Alex Standiford",
            "email": "alex@standiford.us"
        }
    ],
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "require": {
      "php": "^8.1"
    },
    "require-dev": {
        "phpnomad/tests": "^0.3.0"
    }
}
